extends ./layout
block content
    .container
        .row.mt-4
            .col-md-6
                .mr-4
                    p(style="text-transform:capitalize") Welcome #{staff.name}

        .row.mt-2
            if staff.assignedUnits
                - let allUnits = staff.assignedUnits.split(';')

                each unit in allUnits
                    .col-md-2
                        a(href=`/staff/getAllStudents?unit=${unit}` type="submit" style="color:black").card.card-body.btn.btn-secondary= unit
                        